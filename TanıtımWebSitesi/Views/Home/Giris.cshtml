<div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">
        @{
            if (ViewBag.sonuc != null)
            {
                <div class="alert alert-success">
                    @ViewBag.sonuc
                </div>
            }
        }
        <form class="row g-3" asp-controller="home" asp-action="Giris" method="post">
            <div class="col-md-6">
                <label for="eposta" class="form-label">E-Posta</label>
                <input class="form-control" id="eposta" name="eposta" type="email" />
            </div>
            <div class="col-md-6">
                <label for="sifre" class="form-label">Şifre</label>
                <input class="form-control" id="sifre" name="sifre" type="password" />
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Giriş Yap</button>
            </div>
        </form>
    </div>
</div>
